<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="120dp"
    android:layout_height="100dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="@dimen/margin10"
    card_view:cardMaxElevation="@dimen/margin10"
    android:layout_margin="3dp">


    <LinearLayout
        android:id="@+id/ll_billing_display_adapter_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_billing_display_adapter_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_fav_filled"
            android:padding="2dp"
            android:foregroundGravity="center"/>


        <TextView
            android:id="@+id/tv_billing_display_adapter_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            style="@style/TV_Owner_Details"
            android:gravity="center"/>


    </LinearLayout>

</android.support.v7.widget.CardView>
