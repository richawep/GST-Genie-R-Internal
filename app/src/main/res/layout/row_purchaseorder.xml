<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_purchase_order_row_list_Sn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        style="@style/TV_Billing_Item_List" />

    <TextView
        android:id="@+id/tv_purchase_order_row_list_hsnCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/TV_Billing_Item_List" />

    <TextView
        android:id="@+id/tv_purchase_order_row_list_itemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        style="@style/TV_Billing_Item_List" />

    <TextView
        android:id="@+id/tv_purchase_order_row_list_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        style="@style/TV_Billing_Item_List" />

    <TextView
        android:id="@+id/tv_purchase_order_row_list_qty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        style="@style/TV_Billing_Item_List" />

    <TextView
        android:id="@+id/tv_purchase_order_row_list_UOM"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/TV_Billing_Item_List" />

    <TextView
        android:id="@+id/tv_purchase_order_row_list_taxVal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/TV_Billing_Item_List" />

    <TextView
        android:id="@+id/tv_purchase_order_row_list_igstAmt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".6"
        style="@style/TV_Billing_Item_List" />
    <TextView
        android:id="@+id/tv_purchase_order_row_list_cgstAmt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".6"
        style="@style/TV_Billing_Item_List" />

    <TextView
        android:id="@+id/tv_purchase_order_row_list_sgstAmt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/TV_Billing_Item_List" />

    <TextView
        android:id="@+id/tv_purchase_order_row_list_cessAmt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".6"
        style="@style/TV_Billing_Item_List" />

    <TextView
        android:id="@+id/tv_purchase_order_row_list_amt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/TV_Billing_Item_List" />

    <ImageView
        android:id="@+id/iv_purchase_order_row_list_imgDel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:src="@mipmap/ic_delete"/>

</LinearLayout>